<% if flash[:notice] %>
		<script type="text/javascript">
			noty({
				text: "<%= flash[:notice] %>",
				type: 'alert'
			});
		</script>
		<% end %>

		<% if flash[:alert] %>
		<script type="text/javascript">
			noty({
				text: "<%= flash[:alert] %>",
				type: 'error'
			});
		</script>
		<% end %>

		<% if flash[:success] %>
		<script type="text/javascript">
			noty({
				text: "<%= flash[:success] %>",
				type: 'success'
			});
		</script>
		<% end %>

		<% if flash[:error] %>
		<script type="text/javascript">
			noty({
				text: "<%= flash[:error] %>",
				type: 'error'
			});
		</script>
		<% end %>
