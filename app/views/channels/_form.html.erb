<%= javascript_include_tag 'selectize.min','channel_edit_selectize' %>
<%= stylesheet_link_tag 'selectize.psymic' %>

<%= bootstrap_form_for @channel , style: :horizontal do |f| %>

    <%= f.text_field :title %>
    <%= f.text_area :body , size:"25x6" %>
    <%= f.file_field :cover , help: "Must be atleast 730x200px and less than 5MB" %>
    <%= f.file_field :icon , help: "Must be atleast 128x128px and pre-cropped" %>
    <%= f.form_group do %>
    	<%= f.submit :Submit , class:"btn btn-themed" %>
    	<% unless @channel.cover.blank? || @channel.new_record?%>
    	   <%= link_to "Modify Cropping", crop_cover_path , class:"btn btn-themed" %>
    	<% end %>
        <% if can? :destroy, @channel && !@channel.new_record? %>
            <%= link_to 'Delete' , @channel , :confirm => 'Are you sure?', :method => :delete, class:"btn btn-danger" %>
        <% end %>
	<% end %>

<% end %>
