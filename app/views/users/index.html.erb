<% @title = "Users" %>
<div class="head">
<h2>Psymies list</h2>
</div>

<table class="table table-striped">
<th>Rank</th>
<th>Username</th>
<th>Joined</th>
<th>Karma</th>
<% n = 0 %>
<% @users.each do |u| %>
<% n = n+1 %>
<tr <% if u.unread?(current_user) %>class="success"<% end %>>
<td><%= n %></td>
<td><%= link_to u.username, u %></td>
<td><%= distance_of_time_in_words(Time.now,u.created_at,true,{highest_measure_only:true}) %> ago</td>
<td><b><%= link_to u.points.round , activity_user_path(u) %></b></td>
</tr>
<% end %>
</table>

<%= paginate @users %>