<div class="head">
	<h2>Mindlogs Moderation Queue</h2>
</div>

<% if @mindlogs.any? %>
	<p><%= @mindlogs.count %> entries await moderation.</p>
	<table class="table table-striped">
	<th>Title</th>
	<th>Posted</th>
	<th>Issue</th>
	<% @mindlogs.each do |m| %>
		<tr>
		<td><%= link_to m.title, edit_mindlog_path(m) %></td>
		<td><%= time_ago(m.created_at) %>
		</td>
		<td><%= m.workflow_state %></td>
		</tr>
	<% end %>
	</table>
<% else %>
	<h3>Wow! All entries clear</h3>
<% end %>