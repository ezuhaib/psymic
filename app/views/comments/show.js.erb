if ($('#commentable-<%= @commentable.id %> .comment_box').is(":visible")) {
$('#commentable-<%= @commentable.id %> .comment_box').slideUp(1000,function(){$(this).remove();});
}

else {
	$('<%= escape_javascript(render template:'comments/show.html.erb') %>').appendTo('#commentable-<%= @commentable.id %> .comments-js').hide().slideDown(1000);
}