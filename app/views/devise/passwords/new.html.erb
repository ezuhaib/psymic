<% title "Registrations" %>
<div class="head">
	<h2>Forgot your password?
	<span class="pull-right"><%= link_to "New account", new_user_registration_path , class:"btn btn-primary" %></span>
	</h2>
</div>

<%= bootstrap_form_for resource, as: resource_name, url: password_path(resource_name), method: :post do |f| %>

  <%= f.email_field :email, :autofocus => true, placeholder:"Please enter your email.", hide_label: true %>
<%= f.submit "Send me reset password instructions" , class:"btn btn-success"%>
<% end %>
</br>
<%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
