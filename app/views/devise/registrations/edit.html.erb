<h2>Account Settings
<span class="float-right"><%= link_to "Back" , @user , class:"btn btn-default" %></span></h2>
</br>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "col-sm-12 form-horizontal", role: "form"}) do |f| %>
  <%= devise_error_messages! %>

<div class="form-group">
   <%= f.label :email , class:'col-lg-3 control-label'%>
   <div class="col-lg-9"><%= f.email_field :email , class:"form-control"%></div>
</div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="col-lg-9"><div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

<div class="form-group">
  <%= f.label :password , class:'col-lg-3 control-label'%>
  <div class="col-lg-9"><%= f.password_field :password, :autocomplete => "off" , class:"form-control"%>
  </i><span class="help-block">leave blank if you don't want to change it</span></div>
</div>

<div class="form-group">
  <%= f.label :password_confirmation , class:'col-lg-3 control-label'%>
  <div class="col-lg-9"><%= f.password_field :password_confirmation , class:"form-control"%></div>
</div>

<div class="form-group">
  <%= f.label :current_password , class:'col-lg-3 control-label'%>
  <div class="col-lg-9"><%= f.password_field :current_password , class:"form-control"%>
  <span class="help-block">we need your current password to confirm your changes</span></div>
</div>


<div class="form-group">
  <div class="col-lg-9 col-lg-offset-3"><%= f.submit "Update" , class:"btn btn-default" %></div>
<% end %>
</div>
