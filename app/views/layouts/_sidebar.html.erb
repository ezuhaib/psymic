<%# Logo %>

<div id="logo" class="pull-right">
<%= link_to (image_tag 'psymic-grey-alpha.png' , class:"img-responsive row col-md-10 pull-right") , '/' %>
</div>

<%# Button %>

<div id="links_wrapper">
<div id="collapsing_button" class="pull-right pull-right-xs">
	
	<% if current_user %>

		<%   @notifications_count = Notification.where(:user_id=>current_user.id).pluck(:counter).sum %>
		<% @subscriptions_count = current_user.subscriptions.where(counter:1).count %>

		<div class="dropdown center">
  		<div id="btn_container">
  			<%= link_to notifications_path do %><span id="notifics" class="badge <%= "bg-red" if @notifications_count > 0%>"><%= @notifications_count %></span><% end %>
  			<button class="btn dropdown-toggle btn-default" type="button" id="dropdownMenu1" data-toggle="dropdown">
    		@<%= current_user.username %><span class="caret"></span>
  			</button>
 			<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
	    	<li class="hidden"><%= link_to "Welcome #{current_user.username}",current_user, class:"welcome_line" %></li>

	    	<li role="presentation">
	      	<%= link_to subscriptions_path do %>Watchlist <span class="badge bg-themed"><%= @subscriptions_count %></span><% end %>
	    	</li>
	    	<li role="presentation" class="divider"></span></li>
	    	<li role="presentation"><%= link_to "Profile" , current_user %></li>
	    	<% if can? :admin , :all %><li role="presentation"><%= link_to "Admin", admin_root_path %></li><% end %>
	    	<li role="presentation"><%= link_to "Logout", destroy_user_session_path , :method=>:delete %></li>
  		</ul></div>
		</div>
	<% end %>
</div>

<%# Primary Links %>
<ul id="primary_links">
	<li><%= link_to "Mindlogs" , mindlogs_path %></li>
	<% if can? :backstage , Feedback%><li><%= link_to "Backstage" , admin_backstage_path %></li><% end %>
	<% if can? :read , Feedback%><li><%= link_to "Meta" , meta_feedbacks_path %></li><% end %>
	<% if !current_user %>
		<li><%= link_to "Join Psymic" , new_user_registration_path %></li>
		<li><%= link_to "Log in" , new_user_session_path %></li>
	<% end %>
</ul>

<%# Secondary %>
<ul class="bottom-links pull-right">
	<li><%= link_to "Help Center" , wiki_page_path(:help) %></li>
</ul>

<div id="footer_text"><span>All rights reserved</span></div>

</div>