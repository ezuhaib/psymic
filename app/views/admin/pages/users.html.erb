<div class="head">
<h2>Users List
<%= link_to "Mark all seen" , {do:"mark_read"} , {class:"btn btn-success pull-right"} %></h2>
</div>

<table class="table table-striped">
<th>Username</th>
<th>Special Role(s)</th>
<th>Joined</th>
<% @users.each do |u| %>
<tr <% if u.unread?(current_user) %>class="success"<% end %>>
<td><%= link_to u.username, u %></td>
<td><%= u.roles.map(&:title).join(",") %></td>
<td><%= distance_of_time_in_words(Time.now,u.created_at,true,{highest_measure_only:true}) %> ago</td>
</tr>
<% end %>
</table>

<%= paginate @users %>