<%= bootstrap_form_for @comic , style: :horizontal do |f| %>
    <%= f.file_field :comic %>
    <%= f.text_field :title , maxlength: 38 %>
    <%= f.select :mindlog_id , {@comic.mindlog.try(:title) => @comic.try(:mindlog_id)} %>
    <%= if can? :moderate , Comic then f.form_group do %><%= f.check_box :published %><% end end %>
    <%= f.form_group do %><%= f.submit :submit %><% end %>
<% end %>

<%# The Includes %>
<%= javascript_include_tag 'selectize.min','mindlog_selectize' %>
<%= stylesheet_link_tag 'selectize.psymic' %>