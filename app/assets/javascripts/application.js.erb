$(function() {

    $('#mindlog_topic_list').selectize({
   	create: true,
    hideSelected: true,
    persist: false,
    delimiter: ',',
    valueField: 'name',
    labelField: 'name',
    searchField: 'name',

    load: function(query, callback) {
        if (!query.length) return callback();
        $.ajax({
            url: '/mindlogs/tags.json?q=' + encodeURIComponent(query),
            type: 'GET',
            error: function() {
                callback();
            },
            success: function(res) {
                callback(res);
            }
        });
    }
});

});